<!-- the following code is an "ejs-mate layout" that references HTML from another ejs file -->
<% layout("layouts/boilerplate") %>

    <div id="cluster-map"></div>
    <div class="container">
        <h1>All Campgrounds</h1>
        <div>
            <a href="/campgrounds/new">Add New Campground</a>
        </div>
        <% for(let campground of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length) {%>
                            <img src="<%= campground.images[0].url %>" alt="" class="img-fluid img-thumbnail"
                                style='width: 400px; height: 300px;'>
                            <% } else { %>
                                <img src="https://res.cloudinary.com/dzdhxeg5n/image/upload/v1683656434/samples/landscapes/nature-mountains.jpg"
                                    alt="">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-secondary">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%=
                                    campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>


                <script>
                    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
                    const campgrounds = { features: <%- JSON.stringify( campgrounds ) %> }
                </script>

                <script src="/javascripts/clusterMap.js"></script>

    </div>